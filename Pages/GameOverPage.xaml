<Page x:Class="Battleship.Pages.GameOverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battleship.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameOverPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" 
               HorizontalAlignment="Center" TextWrapping="Wrap" Text="Game Over" VerticalAlignment="Center" FontWeight="Bold" FontSize="48"/>
        
        <TextBlock Grid.Row="1" Grid.Column="0" 
       HorizontalAlignment="Center" TextWrapping="Wrap" Text="The winner is..." VerticalAlignment="Bottom" FontSize="16"/>

        <TextBlock x:Name="tbPlayerName" Grid.Row="2" Grid.Column="0" 
        HorizontalAlignment="Center" TextWrapping="Wrap" Text="PLACEHOLDER" VerticalAlignment="Top" FontWeight="Bold" FontSize="48"/>

    </Grid>
</Page>
